{
    "name": "ai-code-assistant",
    "displayName": "AI Code Assistant",
    "description": "VS Code extension that uses AI to explain, debug, and generate code",
    "version": "1.0.0",
    "engines": {
        "vscode": "^1.74.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:ai-code-assistant.explainCode",
        "onCommand:ai-code-assistant.detectBugs",
        "onCommand:ai-code-assistant.generateCode"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "ai-code-assistant.explainCode",
                "title": "AI: Explain Selected Code",
                "category": "AI Code Assistant"
            },
            {
                "command": "ai-code-assistant.detectBugs",
                "title": "AI: Detect Bugs in Code",
                "category": "AI Code Assistant"
            },
            {
                "command": "ai-code-assistant.generateCode",
                "title": "AI: Generate Code from Description",
                "category": "AI Code Assistant"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "command": "ai-code-assistant.explainCode",
                    "group": "navigation"
                },
                {
                    "command": "ai-code-assistant.detectBugs",
                    "group": "navigation"
                }
            ]
        },
        "configuration": {
            "title": "AI Code Assistant",
            "properties": {
                "aiCodeAssistant.apiKey": {
                    "type": "string",
                    "default": "",
                    "description": "Your OpenAI API Key (get from https://platform.openai.com)",
                    "scope": "application"
                },
                "aiCodeAssistant.model": {
                    "type": "string",
                    "default": "gpt-3.5-turbo",
                    "description": "AI Model to use",
                    "enum": [ "gpt-3.5-turbo", "gpt-4" ]
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts"
    },
    "devDependencies": {
        "@types/vscode": "^1.74.0",
        "@types/node": "16.x",
        "@typescript-eslint/eslint-plugin": "^5.45.0",
        "@typescript-eslint/parser": "^5.45.0",
        "eslint": "^8.28.0",
        "typescript": "^4.9.4"
    }
}